<div class="container">
	<h1>Se connecter</h1>
	<%= form_tag '/login' do %>
	<%= label_tag(:email, "Adresse mail :") %>
	<%= text_field_tag :email %>
	<%= label_tag(:password, "Password :") %>
	<%= password_field_tag :password %>
	<%= submit_tag "Se connecter" %>
	<a href="/">Accueil</a>
</div>

<% end %>