<h2>Films</h2>
<ul id="films-index">
	<% @films.each do |film| %>
		<li>
			<%= link_to film.nom, film %>
			<%= check_box_tag "checked_film_#{film.id}", nil, film.checked, :'data-id' => film.id %>		
		</li>
	<% end %>
	<%= link_to 'New Film', new_film_path %>
</ul>

